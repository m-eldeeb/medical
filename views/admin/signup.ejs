      <!-- End Navbar -->
      <div class="container-fluid">
        <div class="row offset-1">
          <div class="col-md-2">
            <h3 class="mb-3 card text-center">SIGN UP</h3>
          </div>
        </div>

        <!-- sign up fooooooorm -->
        <div class="row mt-4 mb-3">
          <div class="col-md-10 offset-1">
            <div class="card">
              <div class="card-body">
                <form
                  class="box"
                  action="/admin/doctors/signup"
                  method="post"
                  enctype="multipart/form-data"
                >
                  <div class="mb-3">
                    <% if (catchErr) { %>
                    <div class="alert alert-danger text-white"><%= catchErr %></div>
                    <% } %>
                  </div>
                  <div class="mb-3">
                    <% if (userExist) { %>
                    <div class="alert alert-danger text-white">
                      Email Is Exist Try Another One
                    </div>
                    <% } %>
                  </div>
                  <div class="mb-3">
                    <% if (catchErr) { %>
                    <div class="alert alert-danger text-white">Server Error</div>
                    <% } %>
                  </div>

                  <div class="mb-3 position-relative">
                    <label for="exampleInputText" class="form-label"
                      >Username</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="exampleInputText"
                      name="userName"
                      value="<%= oldInputs?.userName  %>"
                    />
                    <% if (validationErr?.includes('userName')) { %>
                    <div class="alert alert-danger text-white mt-2">in-valid userName</div>
                    <% } %>
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >Email address</label
                    >
                    <input
                      type="email"
                      class="form-control"
                      id="exampleInputEmail1"
                      name="email"
                      value="<%= oldInputs?.email %>"
                    />
                    <% if (validationErr?.includes('email')) { %>
                    <div class="alert alert-danger text-white mt-2">in-valid Email</div>
                    <% } %>
                  </div>
                  <div class="mb-3 position-relative">
                    <label for="password" class="form-label">Password</label>
                    <input
                      type="password"
                      class="form-control"
                      id="password"
                      name="password"
                      value="<%= oldInputs?.password  %>"
                    />
                    <i
                      class="fa fa-eye show-password"
                      aria-hidden="true"
                      id="toggle-password"
                    ></i>
                    <% if (validationErr?.includes('password')) { %>
                    <div class="alert alert-danger text-white mt-2">
                      in-valid Pasword must have at least 6 chrs
                    </div>
                    <% } %>
                  </div>
                  <div class="mb-3 position-relative">
                    <label for="confirm-password" class="form-label"
                      >Confirm Password</label
                    >
                    <input
                      type="password"
                      class="form-control"
                      id="confirm-password"
                      name="cPassword"
                      value="<%= oldInputs?.cPassword  %>"
                    />
                    <i
                      class="fa fa-eye show-password"
                      aria-hidden="true"
                      id="toggle-confirm-password"
                    ></i>
                    <% if (validationErr?.includes('cPassword')) { %>
                    <div class="alert alert-danger text-white mt-2">
                      passwords mis-Match
                    </div>
                    <% } %>
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputPhone" class="form-label"
                      >phone</label
                    >
                    <input
                      type="tel"
                      class="form-control"
                      id="exampleInputPhone"
                      name="phone"
                      value="<%= oldInputs?.phone  %>"
                    />
                    <% if (validationErr?.includes('phone')) { %>
                    <div class="alert alert-danger text-white mt-2">in-valid Phone</div>
                    <% } %>
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputPhone" class="form-label"
                      >Address</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="exampleInputPhone"
                      name="address"
                      value="<%= oldInputs?.address  %>"
                    />
                    <% if (validationErr?.includes('address')) { %>
                    <div class="alert alert-danger text-white mt-2">in-valid Address</div>
                    <% } %>
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputPhone" class="form-label"
                      >Specialization</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="exampleInputPhone"
                      name="specialization"
                      value="<%= oldInputs?.specialization  %>"
                    />
                    <% if (validationErr?.includes('specialization')) { %>
                    <div class="alert alert-danger text-white mt-2">
                      in-valid specialization
                    </div>
                    <% } %>
                  </div>

                  <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label"
                      >Profile image</label
                    >
                    <input
                      class="form-control"
                      type="file"
                      id="formFile"
                      name="image"
                      accept="image/*"
                    />
                    <% if (validationErr?.includes('fileErr')) { %>
                    <div class="alert alert-danger text-white mt-2">Wrong file error</div>
                    <% } %>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Gender</label>
                    <div class="d-flex">
                      <div class="form-check me-5">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="gender"
                          id="flexRadioDefault1"
                          value="Male"
                          checked
                        />
                        <label class="form-check-label" for="flexRadioDefault1">
                          Male
                        </label>
                      </div>
                      <div class="form-check">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="gender"
                          id="flexRadioDefault2"
                          value="Female"
                        />
                        <label class="form-check-label" for="flexRadioDefault2">
                          Female
                        </label>
                      </div>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-primary w-100">
                    Signup
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- right hidden navbar options -->
    <div class="fixed-plugin">
      <a class="fixed-plugin-button text-dark position-fixed px-3 py-2">
        <i class="fa fa-cog py-2"> </i>
      </a>
      <div class="card shadow-lg">
        <div class="card-header pb-0 pt-3">
