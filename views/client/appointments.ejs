    <div class="container">
      <div class="main-body mt-5 mb-5">
        <div class="row">
          <div class="col-md-12">
            <div class="card mb-3 p-4">
              <h2 class="mb-0">Book a doctor</h2>
              <hr />
              <form
                class="w-100"
                action="/doctors/appointments/details"
                method="post"
              >
                <div class="row g-0">
                  <div class="col-3 px-0">
                    <label for="exampleFormControlInput1"
                      ><i class="fa fa-stethoscope" aria-hidden="true"></i>
                      Select specialty</label
                    >
                    <select class="form-control" name="specialty">
                      <option value=""></option>
                      <option value="Dermatology-(Skin)">Dermatology (Skin)</option>
                      <option value="Dentistry-(Teeth)">
                        Dentistry (Teeth)
                      </option>
                      <option value="Neurology-(Brain & Nerves)">
                        Neurology (Brain & Nerves)
                      </option>
                      <option value="Ear-Nose-throat">
                        Ear, Nose and Throat
                      </option>
                      <option value="Chest-Respiratory">
                        Chest and Respiratory
                      </option>
                      <option value="Audiology">Audiology</option>
                      <option value="Orthopedics-(Bones)">
                        Orthopedics (Bones)
                      </option>
                      <option value="Dietitian-Nutrition">
                        Dietitian and Nutrition
                      </option>
                      <option value="Family-Medicine">Family Medicine</option>
                    </select>
                  </div>

                  <div class="col-3 px-0">
                    <label for="exampleFormControlInput1"
                      ><i class="fa fa-map-marker" aria-hidden="true"></i>
                      Select city</label
                    >
                    <select class="form-control" name="city">
                      <option value="Cairo" selected>Cairo</option>
                    </select>
                  </div>

                  <div class="col-3 px-0">
                    <label for="exampleFormControlInput1"
                      ><i class="fa fa-map-marker" aria-hidden="true"></i>
                      Select area</label
                    >
                    <select class="form-control" name="area">
                      <option value=""></option>
                      <option value="Heliopolis">Heliopolis</option>
                      <option value="Nasr-City">Nasr City</option>
                      <option value="El-Maadi">El-Maadi</option>
                      <option value="New-Cairo">New Cairo</option>
                      <option value="El-Manyal">El-Manyal</option>
                      <option value="Ain-Shams">Ain Shams</option>
                      <option value="West-El-Balad ">West El-Balad</option>
                      <option value="Shoubra">Shoubra</option>
                      <option value="El-Abbasia">El-Abbasia</option>
                      <option value="El-Kattameya">El-Kattameya</option>
                    </select>
                  </div>
                  <div class="col-3 px-0 d-flex align-items-end">
                    <button class="btn btn-danger w-100 font-weight-bold">
                      <i class="fa fa-search" aria-hidden="true"></i> Search
                    </button>
                  </div>
                </div>
              </form>
            </div>
